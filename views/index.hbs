<div class="container my-3 text-center">
  <h1>URL Shortener</h1>
  <div class="image-box p-4">
    <img style="max-height: 250px;" src="images/URL-icon.png" alt="URL icon">
    <div class="my-2">Icons made by <a href="https://www.freepik.com" title="Freepik">Freepik</a> from <a
        href="https://www.flaticon.com/" title="Flaticon">www.flaticon.com</a></div>
  </div>
  {{#if errorMessage}}
  <div class="alert alert-danger alert-dismissible fade show w-75 mx-auto" role="alert">
    <strong>{{ errorMessage }}</strong>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {{/if}}
  {{#if isSuccessful}}
  <div class="result-box mx-auto">
    <h2>Success! Please use this link:</h2>
    <a href="{{ shortUrl }}" target="_blank">
      <h4 id="url-text">{{ shortUrl }}</h4>
    </a>
  </div>
  <a href="/" class="btn btn-secondary btn-lg my-4">Shorten another URL</a>
  <button type="button" id="copy-button" class="btn btn-primary btn-lg my-4 mr-3">Copy</button>
  <p id="copy-text"></p>
  {{else}}
  <div class="form-box w-75 mx-auto">
    <form action="/" method="POST">
      <input type="url" name="originalUrl" id="originalUrl" placeholder="Input URL Here. Ex: https://www.google.com"
        class="form-control" required>
      <button type="submit" class="btn btn-outline-primary my-4 w-50">Shorten</button>
    </form>
  </div>
  {{/if}}
</div>